<div class="container">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="#" class="active" id="login-form-link">ログイン</a>
							</div>
							<div class="col-xs-6">
								<a href="#" id="register-form-link">サインアップ</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<div id="login-form" style="display: block;">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Eメール" %>
                  </div>

									<div class="form-group">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
									</div>

                  <div class="form-group text-center">
                    <% if devise_mapping.rememberable? -%>
                      <div class="field">
                        <%= f.check_box :remember_me%>
                        <%= f.label "Remember me?" %>
                      </div>
                    <% end -%>
                  </div>

                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-6 col-sm-offset-3">
                        <%= f.submit "Log in", class: "form-control btn btn-login" %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="text-center">
                          <%= render "devise/shared/links" %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>

                <div id="register-form" style="display: none;">
                  <%= form_for(resource, as: resource_name,html: {multipart: true},
                    url: registration_path(resource_name)) do |f| %>
  									<div class="form-group">
                      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Eメール" %>
  									</div>

                    <div class="form-group">
                      <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "名前"  %>
                    </div>

                    <div class="form-group">
                      <%= f.label "代表イメージ" %>
                      <%= f.file_field :avatar, class: "form-control", placeholder: "代表イメージ" %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
                    </div>

                    <div class="form-group">
                      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード確認", class: "form-control" %>
                    </div>
                    <div class="form-group">
                      <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                          <%= f.submit "サインアップ", class: "form-control btn btn-register" %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


