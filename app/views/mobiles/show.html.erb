<% provide :title, "#{@mobile.name}"%>
<div class="col-md-9 phone-div">
  <div class="phone-name">
    <%= @mobile.name %>
  </div>
  <div class="phone-info">
    <div class="col-md-4">
      <%= image_tag @mobile.image.url, class: "col-md-offset-2" %>
    </div>
    <div class="col-md-4" style="height: 108px">
      <i class="fa fa-calendar" aria-hidden="true"></i> Released <%= @mobile.launch_announced %> <br>
      <i class="fa fa-mobile-phone" aria-hidden="true"></i> <%= @mobile.thickness%> <br>
      <i class="fa fa-check" aria-hidden="true"></i> <%= @mobile.os %> <br>
      <i class="fa fa-tags" aria-hidden="true"></i> @mobile.storage <br>
    </div>
    <div class="col-md-2" style="height: 108px">
      HITS
    </div>
    <div class="col-md-2" style="height: 108px">
      BECOME A FAN
    </div>
    <div class="col-md-2" style="height: 108px">
      <i class="fa fa-arrows-alt fa-2x" aria-hidden="true"></i><br>
      <%= @mobile.display %>
    </div>
    <div class="col-md-2" style="height: 108px">
      <i class="fa fa-camera fa-2x" aria-hidden="true"></i><br>
      <%= @mobile.camera %>
    </div>
    <div class="col-md-2" style="height: 108px">
      <i class="fa fa-cog fa-2x" aria-hidden="true"></i><br>
      <%= @mobile.ram %>
    </div>
    <div class="col-md-2" style="height: 108px">
      <i class="fa fa-battery-full fa-2x" aria-hidden="true"></i><br>
      <%= @mobile.battery_spec %>
    </div>
  </div>
</div>
<div class="col-md-9 specs-div">
  <table class="table table-bordered">
    <tr>
      <td>Network</td>
      <td>Technology</td>
      <td><%= @mobile.network_technology %></td>
    </tr>
    <tr>
      <td rowspan="2">Launch</td>
      <td>Annouced</td>
      <td><%= @mobile.launch_announced %></td>
    </tr>
    <tr>
      <td>Status</td>
      <td><%= @mobile.launch_status %></td>
    </tr>
    <tr>
      <td rowspan="3">Body</td>
      <td>Dimensions</td>
      <td><%= @mobile.body_dimensions %></td>
    </tr>
    <tr>
      <td>Weight</td>
      <td><%= @mobile.body_weight %></td>
    </tr>
    <tr>
      <td>Sim</td>
      <td><%= @mobile.body_sim %></td>
    </tr>
    <tr>
    <td rowspan="4">Display</td>
    <td>Type</td>
    <td><%= @mobile.display_type %></td>
    </tr>
    <tr>
      <td>Size</td>
      <td><%= @mobile.display_size %></td>
    </tr>
    <tr>
      <td>Resolution</td>
      <td><%= @mobile.display_resolution %></td>
    </tr>
    <tr>
      <td>Multitouch</td>
      <td><%= @mobile.display_multitouch %></td>
    </tr>
    <tr>
      <td rowspan="4">Platform</td>
