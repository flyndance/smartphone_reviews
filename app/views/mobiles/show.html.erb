    </tr>
    <tr>
      <td>Messaging</td>
      <td><%= @mobile.features_messaging %></td>
    </tr>
    <tr>
      <td>Browser</td>
      <td><%= @mobile.features_browser %></td>
    </tr>
    <tr>
      <td>Java</td>
      <td><%= @mobile.features_java %></td>
    </tr>
    <tr>
