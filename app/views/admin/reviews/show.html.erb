<% provide :title, "#{@review.mobile.name}" %>
<div class="col-md-6">
  <h1>Review of <%= @review.mobile.name %></h1>
  <h3>Author: <%= link_to @review.user.name, admin_user_path(@review.user) %></h3>
  <span class="label label-danger">Created at <%= @review.created_at%></span><br>
</div>
<div class="col-md-6" style="padding-top: 50px">
  <%= link_to admin_review_path(@review) do %>
    <div class="btn btn-success"> View </div>
  <% end %>
  <%= link_to edit_admin_review_path(@review) do %>
    <div class="btn btn-primary"> Edit </div>
  <% end %>
  <%= link_to admin_review_path(@review), method: :delete, data: {confirm: "Are you sure?"} do %>
    <div class="btn btn-danger"> Delete </div>
  <% end %>
</div>
<div class="col-md-10" style="padding-top: 20px">
  <%= @review.content.html_safe %>
</div>
