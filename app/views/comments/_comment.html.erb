<li>
  <div class="comment-main-level">
    <!-- Avatar -->
    <div class="comment-avatar">
      <%= image_tag comment.user.avatar.url(:thumb) if comment.user.avatar %>
    </div>
    <!-- Contenedor del Comentario -->
    <div class="comment-box">
      <div class="comment-head">
        <h6 class="comment-name by-author"><%= comment.user.name %></h6>
        <span style="padding-top: 6px">posted <%= time_ago_in_words(comment.created_at) %> </span>
        <i class="fa fa-reply"></i>
        <i class="fa fa-heart"></i>
        <%= link_to [@review, comment], method: :delete, data: {confirm: "Are you sure?"} do %>
          <i class="fa fa-minus-square"></i>
        <% end %>
      </div>
      <div class="comment-content">
        <%= comment.content %>
      </div>
    </div>
  </div>
